@model EmployeeModel

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dob)
        </dt>
        <dd class="col-sm-10">
            @(Model.Dob.ToString("dd/MM/yyyy"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ethnic.EthnicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ethnic.EthnicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.JobName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.JobName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CitizenNumber)
        </dt>
        <dd class="col-sm-10">
            @(Model.CitizenNumber != null ? Model.CitizenNumber : "No Citizen Number")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @(Model.PhoneNumber != null ? Model.PhoneNumber : "No Phone Number")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.CityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.CityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.District.DistrictName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.District.DistrictName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ward.WardName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ward.WardName)
        </dd>
        <dt class="col-sm-2">
            Certificates
        </dt>
        <dd class="col-sm-10">
            @if (Model.Certificates != null && Model.Certificates.Any())
            {
                foreach (var certificate in Model.Certificates)
                {
                    <div>
                        <hr />
                        <h5>Name: @certificate.Name</h5>
                        <p>Issued Date: @certificate.IssuedDate.ToString("dd/MM/yyyy")</p>
                        <p>Issued By: @certificate.IssuedBy</p>
                        <p>Expiry Date: @certificate.ExpiryDate.ToString("dd/MM/yyyy")</p>
                    </div>
                }
            }
            else
            {
                <p>No certificates found.</p>
            }
        </dd>
    </dl>

    <form id="deleteForm" asp-action="Delete" method="post">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a> |
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("deleteForm").addEventListener("submit", function (event) {
            var confirmation = confirm("Are you sure you want to delete this employee?");
            if (!confirmation) {
                event.preventDefault();
            }
        });
    </script>
}
