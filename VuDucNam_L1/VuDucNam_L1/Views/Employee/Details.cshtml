@model EmployeeModel

<h1>Employee Details</h1>

<div>
    <h4>Employee Name: @Model.EmployeeName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.Dob.ToString("dd/MM/yyyy")
        </dd>

        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>

        <dt class="col-sm-2">
            Ethnicity
        </dt>
        <dd class="col-sm-10">
            @Model.Ethnic.EthnicName
        </dd>

        <dt class="col-sm-2">
            Job
        </dt>
        <dd class="col-sm-10">
            @Model.Job.JobName
        </dd>

        <dt class="col-sm-2">
            Citizen Number
        </dt>
        <dd class="col-sm-10">
            @(Model.CitizenNumber != null ? Model.CitizenNumber : "No Citizen Number")
        </dd>

        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @(Model.PhoneNumber != null ? Model.PhoneNumber : "No Phone Number")
        </dd>

        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.City.CityName
        </dd>

        <dt class="col-sm-2">
            District
        </dt>
        <dd class="col-sm-10">
            @Model.District.DistrictName
        </dd>

        <dt class="col-sm-2">
            Ward
        </dt>
        <dd class="col-sm-10">
            @Model.Ward.WardName
        </dd>

        <dt class="col-sm-2">
            Specific Address
        </dt>
        <dd class="col-sm-10">
            @Model.SpecificAddress
        </dd>

        <dt class="col-sm-2">
            <h5>Certificates</h5>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Certificates != null && Model.Certificates.Any())
            {
                foreach (var certificate in Model.Certificates)
                {
                    <div>
                        <hr />
                        <h5>Certificate Name: @certificate.Name</h5>
                        <p>Issued Date: @certificate.IssuedDate.ToString("dd/MM/yyyy")</p>
                        <p>Issued By: @certificate.IssuedBy</p>
                        <p>Expiry Date: @certificate.ExpiryDate.ToString("dd/MM/yyyy")</p>
                    </div>
                }
            }
            else
            {
                <p>No certificates found.</p>
            }
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> |
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.EmployeeId" class="btn btn-danger">Delete</a>
</p>
