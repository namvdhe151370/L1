@model VuDucNam_L1.Models.DistrictModel
@{
    ViewBag.Title = "Delete District";
}

<h2>Delete District</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>District</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            District ID
        </dt>
        <dd class="col-sm-10">
            @Model.DistrictId
        </dd>
        <dt class="col-sm-2">
            District Name
        </dt>
        <dd class="col-sm-10">
            @Model.DistrictName
        </dd>
        <dt class="col-sm-2">
            City ID
        </dt>
        <dd class="col-sm-10">
            @Model.CityId
        </dd>
    </dl>

    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="DistrictId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts {
    <script>
        document.getElementById("deleteForm").addEventListener("submit", function (event) {
            var confirmation = confirm("Are you sure you want to delete this district?");
            if (!confirmation) {
                event.preventDefault();
            }
        });
    </script>
}
