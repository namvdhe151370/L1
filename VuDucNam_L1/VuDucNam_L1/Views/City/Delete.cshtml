@model VuDucNam_L1.Models.CityModel
@{
    ViewBag.Title = "Delete City";
}

<h2>Delete City</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>City</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            City Id
        </dt>
        <dd class="col-sm-10">
            @Model.CityId
        </dd>
        <dt class="col-sm-2">
            City Name
        </dt>
        <dd class="col-sm-10">
            @Model.CityName
        </dd>
    </dl>

    <form id="deleteForm" asp-controller="City" asp-action="Delete" method="post">
        <input type="hidden" asp-for="CityId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts {
    <script>
        document.getElementById("deleteForm").addEventListener("submit", function (event) {
            var confirmation = confirm("Are you sure you want to delete this city?");
            if (!confirmation) {
                event.preventDefault();
            }
        });
    </script>
}
