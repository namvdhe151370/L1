@model VuDucNam_L1.Models.WardModel

@{
    ViewBag.Title = "Delete Ward";
}

<h2>Delete Ward</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ward</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ward Id
        </dt>
        <dd class="col-sm-10">
            @Model.WardId
        </dd>
        <dt class="col-sm-2">
            Ward Name
        </dt>
        <dd class="col-sm-10">
            @Model.WardName
        </dd>
        <dt class="col-sm-2">
            District
        </dt>
        <dd class="col-sm-10">
            @Model.DistrictName
        </dd>
    </dl>

    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="WardId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts {
    <script>
        document.getElementById("deleteForm").addEventListener("submit", function (event) {
            var confirmation = confirm("Are you sure you want to delete this ward?");
            if (!confirmation) {
                event.preventDefault();
            }
        });
    </script>
}